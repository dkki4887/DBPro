<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.MenuMapper">
    <resultMap id="result" type="persistence.dto.MenuDTO">
        <result property="menu_id" column="menu_id"/>
        <result property="menu_name" column="menu_name"/>
        <result property="store_id" column="store_id"/>
        <result property="menu_name" column="menu_name"/>
        <result property="menu_price" column="menu_price"/>
        <result property="menu_quantity" column="menu_quantity"/>
        <result property="menu_category" column="menu_category"/>
    </resultMap>

    <select id="selectAll" resultMap="result">
        SELECT * FROM MENU
    </select>

    <select id="selectStoreMenu" resultMap="result">
        SELECT *
        FROM MENU
        WHERE store_id = #{store_id}
    </select>

    <select id="selectMenu_menu_id" parameterType="MenuDTO" resultMap="result">
        SELECT *
        FROM MENU
        WHERE menu_id = #{menu_id}
    </select>

    <select id="selectAllMenuId" resultMap="result">
        SELECT menu_id FROM menu
    </select>

    <insert id="menuAdd" parameterType="MenuDTO" keyProperty="menu_id">
        INSERT INTO project.menu(store_id, menu_name, menu_price, menu_quantity, menu_category)
        VALUES(#{store_id}, #{menu_name}, #{menu_price}, #{menu_quantity}, #{menu_category})
    </insert>

    <update id="menuUpdate" parameterType="MenuDTO" keyProperty="menu_id">
                /*MenuDTO를 파라미터로 받는데 이게 수정을 원치 않은 값은 문자열 값은 "" 다른 값들은 null이 들어가있음
                                         각자 값이 ""이거나 null이 아닐 때 수정하는 값 SET으로 추가 해서 파라미터 값 받아 넣으면 됨*/
        UPDATE project.menu
            <set>
                <if test='menu_name!=null'>
                    menu_name = #{menu_name},
                </if>
                <if test='menu_price!=null'>
                    menu_price = #{menu_price},
                </if>
                <if test='menu_quantity!=null'>
                    menu_quantity = #{menu_quantity},
                </if>
                <if test='menu_category!=null'>
                    menu_category = #{menu_category},
                </if>
            </set>
        WHERE menu_id = #{menu_id} AND store_id = #{store_id};

    </update>

    <update id="updateOrderState">
        UPDATE menu
        SET menu_quantity = menu_quantity - 1
        WHERE menu_name = #{menu_name}
    </update>


</mapper>
